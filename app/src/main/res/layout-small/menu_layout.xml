<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBlack">

    <ImageView
        android:id="@+id/imgViewColorLogo"
        android:layout_width="72dp"
        android:layout_height="85dp"
        android:background="@color/trueWhite"
        android:contentDescription="@string/logo_ContentDescript"
        app:srcCompat="@drawable/ic_color_umass_logo_small" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnShipment"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_vertical_spacing"
        android:background="#0000"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/shipmentBtnText"
        android:textColor="@color/defaultGrey"
        android:textSize="12sp"
        app:drawableLeftCompat="@drawable/ic_grey_single_box"
        app:drawableStartCompat="@drawable/ic_grey_single_box" />

    <View
        android:id="@+id/dividerShipment"
        android:layout_marginBottom="@dimen/small_vertical_spacing"
        android:layout_marginLeft="@dimen/small_edge_margin"
        android:layout_marginRight="@dimen/small_edge_margin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/defaultGrey" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnReference"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/referenceBtnText"
        android:textColor="@color/defaultGrey"
        android:textSize="12sp"
        app:drawableLeftCompat="@drawable/ic_grey_paper_small"
        app:drawableStartCompat="@drawable/ic_grey_paper_small" />

    <View
        android:id="@+id/dividerReference"
        android:layout_marginBottom="@dimen/small_vertical_spacing"
        android:layout_marginLeft="@dimen/small_edge_margin"
        android:layout_marginRight="@dimen/small_edge_margin"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/defaultGrey" />

    <TextView
        android:id="@+id/txtViewMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menuText_port"
        android:textAlignment="center"
        android:textColor="@color/defaultGrey"
        android:textSize="12sp" />

</LinearLayout>