<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBlack">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnShipment"
            android:drawableStart="@drawable/ic_grey_single_box"
            android:drawableLeft="@drawable/ic_grey_single_box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:background="@color/defaultBlack"
            android:text="@string/shipmentBtnText"
            android:textColor="@color/defaultGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgViewColorLogo" />

        <ImageView
            android:id="@+id/imgViewColorLogo"
            android:layout_width="132dp"
            android:layout_height="164dp"
            android:layout_marginTop="52dp"
            android:background="@color/defaultWhite"
            android:contentDescription="@string/colorLogo_ContentDescript"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_color_umass_logo" />

        <View
            android:id="@+id/dividerShipment"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/defaultGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnShipment" />

        <Button
            android:id="@+id/btnReference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@color/defaultBlack"
            android:text="@string/referenceBtnText"
            android:textColor="@color/defaultGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnShipment" />

        <View
            android:id="@+id/dividerReference"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/defaultGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnReference" />

        <TextView
            android:id="@+id/txtViewMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menuText"
            android:textColor="@color/defaultGrey"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerReference" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>